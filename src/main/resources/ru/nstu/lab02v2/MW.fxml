<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.CustomMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<SplitPane fx:id="turboBox" dividerPositions="0.3" minHeight="540.0" minWidth="640.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nstu.lab02v2.MainController">
  <items>
    <AnchorPane fx:id="interfacePane" maxWidth="-Infinity" minHeight="400.0" minWidth="-Infinity" prefHeight="400.0" prefWidth="180.0">
         <children>
            <MenuBar fx:id="mainMenu" prefHeight="30.0" prefWidth="180.0">
              <menus>
                <Menu mnemonicParsing="false" text="Sim">
                  <items>
                        <MenuItem fx:id="startMenu" mnemonicParsing="false" onMenuValidation="#startSim" text="Start" />
                    <MenuItem fx:id="endMenu" mnemonicParsing="false" onMenuValidation="#endSim" text="End" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <CheckMenuItem fx:id="infoMenu" mnemonicParsing="false" onMenuValidation="#clickShow" text="Show stats on end" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <CustomMenuItem mnemonicParsing="false">
                           <content>
                              <Label text="Sim time:" />
                           </content>
                        </CustomMenuItem>
                        <RadioMenuItem fx:id="showTimerRBMenu" mnemonicParsing="false" text="Show">
                           <toggleGroup>
                              <ToggleGroup fx:id="menuTimerShow" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem fx:id="hideTimerRBMenu" mnemonicParsing="false" selected="true" text="Hide" toggleGroup="$menuTimerShow" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="exitMenu" mnemonicParsing="false" onMenuValidation="#exit" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="helpMenuButton" mnemonicParsing="false" text="Click on me!" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Button fx:id="startButton" layoutX="70.0" layoutY="56.0" mnemonicParsing="false" onAction="#startSim" text="Start" />
            <Button fx:id="endButton" layoutX="72.0" layoutY="94.0" mnemonicParsing="false" onAction="#endSim" text="End" textAlignment="CENTER" />
            <TextArea fx:id="motoscfg" layoutX="8.0" layoutY="177.0" prefHeight="17.0" prefWidth="166.0" promptText="millis: 50" />
            <Label layoutX="8.0" layoutY="149.0" text="Moto spawn period" />
            <TextArea fx:id="carscfg" layoutX="8.0" layoutY="299.0" prefHeight="25.0" prefWidth="166.0" promptText="millis: 100" />
            <Label layoutX="8.0" layoutY="274.0" text="Car spawn period" />
            <ComboBox fx:id="motoSpawnChanceComboBox" layoutX="110.0" layoutY="229.0" prefHeight="26.0" prefWidth="65.0" visibleRowCount="4" />
            <ComboBox fx:id="carSpawnChanceComboBox" layoutX="110.0" layoutY="355.0" prefHeight="26.0" prefWidth="65.0" visibleRowCount="4" />
            <Label layoutX="8.0" layoutY="349.0" prefHeight="38.0" prefWidth="72.0" text="Car spawn chance " textAlignment="CENTER" wrapText="true" />
            <Label layoutX="8.0" layoutY="223.0" prefHeight="39.0" prefWidth="72.0" text="Moto spawn chance" textAlignment="CENTER" wrapText="true" />
            <RadioButton fx:id="showTimerRB" layoutX="26.0" layoutY="427.0" mnemonicParsing="false" text="Show">
               <toggleGroup>
                  <ToggleGroup fx:id="timerShow" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="hideTimerRB" layoutX="27.0" layoutY="456.0" mnemonicParsing="false" selected="true" text="Hide" toggleGroup="$timerShow" />
            <Label fx:id="timerLabel" layoutX="53.0" layoutY="401.0" text="time" visible="false" />
            <Label layoutX="17.0" layoutY="400.0" text="Timer" />
         </children></AnchorPane>
    <AnchorPane fx:id="field" minHeight="400.0" minWidth="420.0" prefHeight="600.0" prefWidth="620.0" />
  </items>
</SplitPane>
